@using MiniFootball.Models;

@model IEnumerable<MiniFootball.Models.Team_Player>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Partial.cshtml";
}

<h2>Təkliflər</h2>
<hr />
<div class="pl-2 offerWrapper">
     @if(Model.Count() == 0)
     {
         <div class="alert alert-warning">Yeni oyunçu istəyi yoxdur...</div>
     }

    <ul class="list-group">
        @foreach (var offer in Model)
      {
        <li class="list-group-item">
            <div class="pull-left pt-2">
                <a href="@Url.Action("Details","Players" , new { id = offer.Player_id })" title="Oyunçuya Bax">@offer.Player.Name @offer.Player.Lastname</a>
                <a href="@Url.Action("Details","Teams" , new { id = offer.Team_id })" class="ml-5" title="Komandaya Bax">@offer.Team.Name</a>
            </div>
            <div class="pull-right">
                <a href="#" data-offer-id="@offer.id" class="btn btn-success acceptOffer">Təsdiqlə</a>
                <a href="#" data-offer-id="@offer.id" class="btn btn-danger deleteOffer">Rədd et</a>
            </div>
        </li>
      }
    </ul>

</div>


