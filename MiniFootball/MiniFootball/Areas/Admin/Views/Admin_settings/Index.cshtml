@model IEnumerable<MiniFootball.Models.Admin_settings>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Partial.cshtml";
}

<h2>Admin məlumatlari</h2>
<hr />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.ActionLink("Dəyiş", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detaillar", "Details", new { id=item.id }) |
        </td>
    </tr>
}

</table>
